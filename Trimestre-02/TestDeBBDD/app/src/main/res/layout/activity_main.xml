<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:text="Lista de tareas (Room)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/etTarea"
        android:hint="Nueva tarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btAnadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÃ±adir"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btBorraTodo"
            android:text="Borrar todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btActualizarPrimero"
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lvTareas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dp"
        android:layout_marginTop="12dp"/>

</LinearLayout>