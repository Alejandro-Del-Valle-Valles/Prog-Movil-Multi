<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameActivity">

    <TextView
        android:id="@+id/tvPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turno del Jugador"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/glDashboard"
        android:layout_width="378dp"
        android:layout_height="378dp"
        android:layout_marginTop="1dp"
        android:background="#020202"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayer"
        app:rowCount="3">

        <!-- First Row -->
        <ImageButton
            android:id="@+id/ibPositionOne"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="0"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/ibPositionTwo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/ibPositionThree"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="2"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <!-- Second Row -->
        <ImageButton
            android:id="@+id/ibPositionFour"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="3"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/ibPositionFive"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="4"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/ibPositionSix"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="5"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <!-- Third Row -->
        <ImageButton
            android:id="@+id/ibPositionSeven"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="6"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/ibPositionEight"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="7"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/ibPositionNine"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="onCellClicked"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="8"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>